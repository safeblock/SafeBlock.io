@model HandleLoginModel
<form class="mt-4" asp-controller="Account" asp-action="Register" method="post" asp-antiforgery="true">
    <div class="form-group mb-2">
        <span asp-validation-for="Mail" class="text-danger"></span>
        <label for="emailInput">Email address</label>
        <input type="email" class="form-control" asp-for="Mail" id="emailInput" aria-describedby="emailHelp" placeholder="Enter email address">
        <small id="emailHelp" class="form-text text-muted ">We'll never share your email with any third party. Look our <a href="">Privacy Policy</a>.</small>
    </div>
    <div class="form-group">
        <span asp-validation-for="Password" class="text-danger"></span>
        <label for="passwordInput">Password</label>
        <input type="password" class="form-control" asp-for="Password" id="passwordInput" placeholder="Enter password">
    </div>
    <div class="form-group">
        <span asp-validation-for="VerifyPassword" class="text-danger"></span>
        <label for="verifyPasswordInput">Verify Password</label>
        <input type="password" class="form-control" asp-for="VerifyPassword" id="verifyPasswordInput" placeholder="Enter same password">
    </div>
    <button type="submit" class="btn btn-primary btn-block mt-4"><i class="fas fa-plus-circle"></i> CREATE AN ACCOUNT</button>
</form>
@model ContactDatas
<form method="post" asp-controller="Support" asp-action="SendMessage" asp-antiforgery="true" data-ajax="true" data-ajax-success="SendedMessage" data-ajax-failure="FailedMessage" data-ajax-method="POST" data-ajax-mode="replace" data-ajax-update="#content-test">
    <div class="row">
        <div class="col">
            <div class="form-group">
                <label for="contactSubject">@Localizer["Subject"]</label>
                <input type="text" asp-for="Subject" class="form-control" id="contactSubject" aria-describedby="contactSubjectHelp" placeholder="@Localizer["Enter the subject"]">
                <small id="contactSubjectHelp" class="form-text text-muted pl-1">@Localizer["Specify why do you contact us."]</small>
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label for="contactMail">@Localizer["Email address"]</label>
                <input type="email" asp-for="Email" class="form-control" id="contactMail" aria-describedby="contactMailHelp" placeholder="@Localizer["Enter email address"]">
                <small id="contactMailHelp" class="form-text text-muted pl-1">@Localizer["Get more by watching our"] <a asp-controller="Home" asp-action="PrivacyPolicy">@Localizer["Privacy Policy"]</a>.</small>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label for="contactMessage">@Localizer["Message content"]</label>
        <textarea class="form-control" asp-for="Content" rows="7" id="contactMessage" aria-describedby="contactMessage" placeholder="@Localizer["Enter your message .."]"></textarea>
    </div>
    <div class="form-group">
        <recaptcha />
    </div>
    <button type="submit" class="btn btn-primary btn-sm"> @Localizer["Send Message"]</button>
    <button type="reset" class="btn btn-dark btn-sm"> @Localizer["Cancel"]</button>
</form>
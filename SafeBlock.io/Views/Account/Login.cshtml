@model LoginSystem
<form class="mt-4" asp-controller="Account" asp-action="Login" asp-antiforgery="true" method="post">
    <div class="form-group mb-2">
        <span asp-validation-for="LoginModel.Mail" class="text-danger"></span>
        <label for="emailInput">Email address</label>
        <input type="email" class="form-control" asp-for="LoginModel.Mail" id="emailInput" aria-describedby="emailHelp" placeholder="Enter email address">
    </div>
    <div class="form-group">
        <span asp-validation-for="LoginModel.Password" class="text-danger"></span>
        <label for="passwordInput">Password</label>
        <input type="password" class="form-control" asp-for="LoginModel.Password" id="passwordInput" placeholder="Enter password">
    </div>
    <div class="form-check">
        <input type="checkbox" class="form-check-input" id="exampleCheck1">
        <label class="form-check-label" for="exampleCheck1">Keep me logged in SafeBlock.</label>
    </div>
    <button type="submit" class="btn btn-primary btn-block mt-4"><i class="fas fa-sign-in-alt"></i> LOGIN TO SAFEBLOCK</button>
</form>